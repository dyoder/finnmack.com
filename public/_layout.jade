!!!
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{ site.title }
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="stylesheet", href="/css/site.css")
    link(rel="alternate", type="application/rss+xml", title="#{ site.title }", href="/rss.xml")
    link(rel="shortcut icon", href="/img/favicon.png", type="image/png")
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-44034391-1', 'finnmack.com');
      ga('send', 'pageview');

  body
    nav
      .logo
        a(href="/")
          h1 Finn Mack
      .blurb
        != partial("_partials/blurb")
        .panel
          a.small.success.button(href="/pages/about-me") Join The Mailing List
          a.small.rss.success.button(href="http://feeds.feedburner.com/FinnMack") Subscribe
    
    .feature
      if current.path[0] === "posts"
        .blog.post
          h2 #{ title }
          p.byline
            span.author #{author}
            span.published #{published}

          != yield
      else 
        != yield

    footer
      != partial("_partials/footer")